import React, { useState } from 'react';
import { userServices } from '../../services';
// import mergeState from '../../helpers/mergeState';

export default () => {
  const [email, setEmail] = useState('');
  const [username, setUsername] = useState('');
  const [password, setPassword] = useState('');
  const [repass, setRepass] = useState('');

  //   const handleInputChange = e => {

  //   };

  const handleSubmit = event => {
    event.preventDefault();
    userServices.register({
      email: email,
      username: username,
      password: password,
      re_pass: repass,
    });
  };
  /* eslint-disable */
  return (
    <div>
      <h5 className="page-head-title">Register</h5>
      <div className="section is-fullheight">
        <div className="container">
          <div className="column is-4 is-offset-4">
            <div className="box">
              <form>
                <div className="field">
                  <label className="label" htmlFor="email">
                    Email
                    <div className="control">
                      <input
                        className="input"
                        type="email"
                        name="email"
                        placeholder="Email"
                        required
                        onChange={e => setEmail(e.target.value)}
                      />
                    </div>
                  </label>
                </div>
                <div className="field">
                  <label className="label" htmlFor="username">
                    Username
                    <div className="control">
                      <input
                        className="input"
                        type="text"
                        placeholder="Username"
                        name="username"
                        required
                        onChange={e => {
                          setUsername(e.target.value);
                        }}
                      />
                    </div>
                  </label>
                </div>

                <div className="field">
                  <label className="label" htmlFor="password">
                    Password
                    <div className="control">
                      <input
                        className="input"
                        type="password"
                        placeholder="Password"
                        name="password"
                        required
                        onChange={e => {
                          setPassword(e.target.value);
                        }}
                      />
                    </div>
                  </label>
                </div>

                <div className="field">
                  <label className="label" htmlFor="re_pass">
                    Re-enter password
                    <div className="control">
                      <input
                        className="input"
                        type="password"
                        placeholder="Re-enter Password"
                        name="password"
                        required
                        onChange={e => {
                          setRepass(e.target.value);
                        }}
                      />
                    </div>
                  </label>
                </div>

                <button type="submit" className="button is-block is-info is-fullwidth" onClick={() => handleSubmit()}>
                  Login
                </button>
              </form>
              <div>
                <a href="http://127.0.0.1:3000/login">Have an account? Login!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};
